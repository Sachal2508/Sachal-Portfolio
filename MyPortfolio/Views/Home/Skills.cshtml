<div class="container py-5">
    <h2 class="text-center mb-5 animate__animated animate__fadeInDown">💻 My Skills</h2>

    <div class="row">
        @* Core Skills *@
        @foreach (var skill in new[] {
                new { Name = "C / C++", Icon = "devicon-cplusplus-plain", Level = 90 },
                new { Name = ".NET Core", Icon = "devicon-dot-net-plain", Level = 80 },
                new { Name = "Python", Icon = "devicon-python-plain", Level = 85 },
                new { Name = "T-SQL", Icon = "devicon-microsoftsqlserver-plain", Level = 90 },
                new { Name = "HTML", Icon = "devicon-html5-plain", Level = 80 },
                new { Name = "CSS", Icon = "devicon-css3-plain", Level = 70 },
                new { Name = "Assembly", Icon = "devicon-ubuntu-plain", Level = 90 }
                })
        {
            <div class="col-md-6 mb-4">
                <div class="card p-3 shadow-sm animate__animated animate__fadeInUp">
                    <div class="d-flex align-items-center mb-2">
                        <i class="@skill.Icon colored fs-2 me-3"></i>
                        <h5 class="mb-0">@skill.Name</h5>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: @skill.Level%" aria-valuenow="@skill.Level" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr class="my-5" />

    <!-- Currently Learning -->
    <h4 class="mb-3">📚 Currently Learning</h4>
    <div class="row">
        @foreach (var skill in new[] {
                new { Name = "JavaScript", Icon = "devicon-javascript-plain", Level = 20 },
                new { Name = "React.js", Icon = "devicon-react-original", Level = 5 },
                new { Name = "Julia (Jupyter)", Icon = "devicon-julia-plain", Level = 30 }
                })
        {
            <div class="col-md-6 mb-4">
                <div class="card p-3 shadow-sm animate__animated animate__fadeInUp">
                    <div class="d-flex align-items-center mb-2">
                        <i class="@skill.Icon colored fs-2 me-3"></i>
                        <h5 class="mb-0">@skill.Name</h5>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: @skill.Level%" aria-valuenow="@skill.Level" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


